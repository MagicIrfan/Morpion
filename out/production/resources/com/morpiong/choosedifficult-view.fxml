<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="chooseDifficultPane" prefHeight="600.0" prefWidth="600.0" stylesheets="@styles/button.css, @styles/mainMenu.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.morpiong.controller.ChooseDifficultController">
    <AnchorPane fx:id="optionsPane" layoutX="201.0" prefHeight="600.0" prefWidth="200.0">
        <children>
            <Button fx:id="easyButton" layoutY="249.0" mnemonicParsing="false" onAction="#onEasyButton" prefHeight="31.0" prefWidth="201.0" stylesheets="@styles/button.css" text="Facile">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <font>
                    <Font name="Arial" size="12.0" />
                </font></Button>
            <Button fx:id="hardButton" layoutY="318.0" mnemonicParsing="false" onAction="#onHardButton" prefHeight="31.0" prefWidth="201.0" text="Difficile">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor></Button>
            <Button fx:id="returnButton" layoutY="456.0" mnemonicParsing="false" onAction="#onReturnButton" prefHeight="31.0" prefWidth="201.0" text="Retour">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
        </children>
    </AnchorPane>
   <AnchorPane layoutX="14.0" layoutY="14.0" prefHeight="183.0" prefWidth="574.0" style="-fx-background-color: BLACK;">
      <children>
            <Label fx:id="titleLabel" layoutX="28.0" layoutY="64.0" prefHeight="56.0" prefWidth="519.0" text="CHOISIR LA DIFFICULTE" textFill="WHITE">
                <font>
                    <Font name="Stencil" size="45.0" />
                </font>
         </Label>
      </children>
   </AnchorPane>
</AnchorPane>
